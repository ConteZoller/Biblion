<!-- Header login -->
<header id="wn__header" class="header__area header__absolute sticky__header">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-6 col-sm-6 col-6 col-lg-2">
				<div class="logo">
					<a href="/">
						<img src="../css/images/logo/logo.png" alt="logo images">
					</a>
				</div>
			</div>
			<!-- spaziatura per le impostazioni -->
			<div class="col-lg-8 d-none d-lg-block"></div>
			<div class="col-md-6 col-sm-6 col-6 col-lg-2">
				<ul class="header__sidebar__right d-flex justify-content-end align-items-center">
					<form action="/auth" method="GET">
						<button type="submit" class="btn btn-primary">Sign In</button>
					</form>
				</ul>
			</div>
		</div>
	</div>		
	<div class="mobile-menu d-block d-lg-none"></div>
</header>
<!-- Fine header -->



<!-- Area login -->
<section class="wn__checkout__area section-padding--lg bg__white">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="wn_checkout_wrap">
					<form class="wn__checkout__form" action="/signup" id="signup-form" method="POST" novalidate>
						<div class="form-group">
							<label>Username</label>
							<input type="text" name="username" id="username" class="form-control" placeholder="Username">
						</div>
                        <div class="form-group">
							<label>Email</label>
							<input type="email" name="email" id="email" class="form-control" placeholder="Email">
						</div>
							<input type="hidden" name="type" id="type" value="1">
						
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                            </div>
                            <div class="form-group">
                                <label>Conferma Password</label>
                                <input type="password" name="password2" id="password2" class="form-control" placeholder="Conferma Password">
                            </div>
						<input type="submit" class="btn btn-primary btn-block" value="SIGNUP">
					</form>
				</div>
			</div>
		</div>
	</div>
</section>